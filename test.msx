// vim: ts=2 sw=2 expandtab ft=java

Instrument "trumpet" {
  Load "trumpet.wav"
}

Instrument "brass" {
  Load "brass.wav"
}

Channel 0 {
  BPM 150 /* in quarter notes */
  Octave 4
  Select "brass"
  Loop 3 {
    Pitch A /* -/+ */
    /* 1w = 2h = 4 = 8e = 16s = 32t */
    Play 10
    Wait 4
  }
}

Channel 1 {
  BPM 150
  Octave 4
  Select "trumpet"
  Loop 5 {
    Pitch B
    Play 8
    Wait 2
  }
}

/* Pitch in [ C, C#, D, D#, E, F, F#, G, G#, A, A#, B ] */
